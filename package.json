{
    "name": "uceasistan",
    "version": "2.5.0",
    "description": "UceAsistan - AI Trading Coach & Risk Guardian",
    "main": "electron/main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder",
        "build:win": "electron-builder --win",
        "build:installer": "electron-builder --win nsis",
        "pack": "electron-builder --dir"
    },
    "author": "UceTrade",
    "license": "MIT",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "dependencies": {
        "electron-log": "^5.4.3",
        "electron-updater": "^6.1.7"
    },
    "build": {
        "appId": "com.ucetrade.uceasistan",
        "productName": "UceAsistan",
        "copyright": "Copyright Â© 2024 UceTrade",
        "directories": {
            "output": "dist"
        },
        "files": [
            "electron/**/*",
            "index.html",
            "*.js",
            "*.css",
            "assets/**/*",
            "!backend/**/*",
            "!desktop-app/**/*",
            "!cloud-api/**/*",
            "!landing-page/**/*",
            "!installer/**/*",
            "!node_modules/**/*",
            "!dist/**/*",
            "!docs/**/*",
            "!my_strategies/**/*",
            "!*.md",
            "!*.py",
            "!*.log"
        ],
        "extraResources": [
            {
                "from": "backend/dist/uceasistan_backend.exe",
                "to": "backend/uceasistan_backend.exe"
            }
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "assets/icon.ico",
            "publisherName": "UceTrade",
            "sign": null,
            "forceCodeSigning": false
        },
        "nsis": {
            "oneClick": true,
            "perMachine": false,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": false,
            "installerIcon": "assets/icon.ico",
            "uninstallerIcon": "assets/icon.ico",
            "installerHeaderIcon": "assets/icon.ico",
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "UceAsistan",
            "runAfterFinish": true,
            "installerLanguages": [
                "tr-TR",
                "en-US"
            ],
            "language": "1055"
        },
        "publish": {
            "provider": "github",
            "owner": "ucetrade",
            "repo": "uceasistan",
            "releaseType": "release"
        }
    }
}