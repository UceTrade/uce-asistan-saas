# UceAsistan Backend Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# SERVER CONFIGURATION
# ============================================
HOST=localhost
PORT=8766
DEBUG=false

# ============================================
# AI PROVIDERS
# ============================================
# Groq (Recommended - Free tier available)
# Get your key at: https://console.groq.com
GROQ_API_KEY=

# OpenAI (GPT-4, paid)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Google Gemini (Free tier available)
# Get your key at: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=

# Default AI provider: groq, openai, or gemini
DEFAULT_AI_PROVIDER=groq

# ============================================
# TELEGRAM NOTIFICATIONS
# ============================================
# Create a bot via @BotFather on Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
TELEGRAM_ENABLED=false

# ============================================
# DATABASE
# ============================================
# SQLite (default) or PostgreSQL
DATABASE_URL=sqlite:///./uceasistan.db

# ============================================
# AUTHENTICATION
# ============================================
# Generate a secure secret: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=change-me-in-production-use-a-secure-random-string
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# ============================================
# SUPABASE (Optional - for SaaS auth)
# ============================================
SUPABASE_URL=
SUPABASE_ANON_KEY=

# ============================================
# RATE LIMITING
# ============================================
AI_RATE_LIMIT_CALLS=20
AI_RATE_LIMIT_PERIOD=60

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/uceasistan.log
